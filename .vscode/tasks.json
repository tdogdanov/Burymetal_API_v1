{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build burymetal CPU",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c11",
                "-Iinclude",
                "src/bm_utils.c",
                "src/bm_device.c",
                "src/bm_buffer.c",
                "src/bm_kernel.c",
                "src/bm_backend_cpu.c",
                "examples/simple_compute.c",
                "-o",
                "build/simple_compute"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build burymetal NVIDIA",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c11",
                "-Iinclude",
                "src/bm_utils.c",
                "src/bm_device.c",
                "src/bm_buffer.c",
                "src/bm_kernel.c",
                "src/bm_backend_nvidia.c",
                "examples/simple_compute.c",
                "-o",
                "build/simple_compute_nvidia",
                "-lcuda"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build burymetal AMD",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c11",
                "-Iinclude",
                "src/bm_utils.c",
                "src/bm_device.c",
                "src/bm_buffer.c",
                "src/bm_kernel.c",
                "src/bm_backend_amd.c",
                "examples/simple_compute.c",
                "-o",
                "build/simple_compute_amd",
                "-lOpenCL"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build burymetal Intel",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c11",
                "-Iinclude",
                "src/bm_utils.c",
                "src/bm_device.c",
                "src/bm_buffer.c",
                "src/bm_kernel.c",
                "src/bm_backend_intel.c",
                "examples/simple_compute.c",
                "-o",
                "build/simple_compute_intel",
                "-lOpenCL"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run simple_compute CPU",
            "type": "shell",
            "command": "./build/simple_compute",
            "group": "test"
        },
        {
            "label": "run simple_compute NVIDIA",
            "type": "shell",
            "command": "./build/simple_compute_nvidia",
            "group": "test"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}